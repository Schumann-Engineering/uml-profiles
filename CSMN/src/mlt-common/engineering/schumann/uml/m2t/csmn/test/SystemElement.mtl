[comment encoding = UTF-8 /]
[module SystemElement(
	'http://www.eclipse.org/uml2/5.0.0/UML',
	'http://schumann.engineering/csmn/1'
)]


[import engineering::schumann::uml::m2t::csmn::common::elements::SystemElement /]


[template public test_CSMN_SystemElement(
	this : Model
)]
[csmn_allSystemElement()->print() /]
[/template]


[template public test_CSMN_OperatingSystem(
	this : Model
)]
<ul>
	<li><b>#System Elements (uml)</b>: [this.csmn_allSystemElement()->size() /]</li>
	<li><b>#System Elements (csmn)</b>: [this.csmn_allSystemElement().csmn_systemElement()->size() /]</li>
	<li><b>#System Elements (os)</b>: [this.csmn_allSystemElement().csmn_systemElement()->select(platformType = CommonPlatformEnumerationType::OperatingSystem)->size() /]</li>
	<li><b>#Query</b>: [csmn_allOperatingSystem()->size() /]</li>
</ul>

[csmn_allOperatingSystem()->print() /]
[/template]


[template private print(
	this : Set(Component)
)]
<p>
	<b>found [this->size() /] 'UML::Component' with 'CSMN::SystemElement' of type 'operating system'</b>
</p>

[if (this->notEmpty())]
<table border="1" width="100%">
	<thead>
		<th style="text-align: center; width: 50%;">name</th>
		<th style="text-align: center; width: 50%;">type</th>
	</thead>
	<tbody>
		[this->sortedBy(name).print() /]
	</tbody>
</table>
[/if]
[/template]


[template private print(
	this : Component
)
? (this.csmn_isSystemElement())
{
	systemElement : SystemElement = this.csmn_systemElement();
}]
<tr>
	<td style="text-align: center;">[name/]</td>
    <td style="text-align: center;">[systemElement.platformType /]</td>
</tr>
[/template]

[template private printHtml(
	this : Component
)]
<tr>
	<td colspan="2" style="text-align: left;"><b>ERROR</b> "[name/]" is not a System Element</td>
</tr>
[/template]