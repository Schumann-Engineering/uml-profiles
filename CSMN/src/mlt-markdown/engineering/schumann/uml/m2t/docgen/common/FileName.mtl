[comment encoding = UTF-8 /]
[module FileName('http://www.eclipse.org/uml2/5.0.0/UML')]


[query public getDirectoryName(
	element : NamedElement
) : String =
	element.eClass().name
/]


[query public getFileName(
	element : NamedElement
) : String =
	element.name
/]


[query public getFileNameFqn(
	element       : NamedElement,
	suffix        : String,
	fileExtension : String
) : String =
	element.getDirectoryName() + '/' + element.getFileName() + suffix + '.' + fileExtension
/]