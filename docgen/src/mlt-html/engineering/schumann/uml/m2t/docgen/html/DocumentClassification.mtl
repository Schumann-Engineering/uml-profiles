[comment encoding = UTF-8 /]
[module DocumentClassification(
	'http://www.eclipse.org/uml2/5.0.0/UML',
	'http://schumann.engineering/docgen/1'
)]


[import engineering::schumann::uml::m2t::common::services::VariableService /]


[template public DOC_Classification_CONFIDENTIAL(
	devNull 		: Element,
	_context		: Context
)]
[setEnv('DOC_Classification', 'CONFIDENTIAL') /]
<div class="document-classification document-classification-confidential">
	<p>CONFIDENTIAL</p>
	<p>for employees only. No access control list applies.</p>
</div>
[/template]


